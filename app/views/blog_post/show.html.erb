<header class="intro-header" style="background-image: url('img/post-bg.jpg')">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="post-heading">
          <h1><%= @post.title %></h1>
          <span class="meta">Posted by <a href="#"><%= @post.author.name ? @post.author.name : "Anonymous" %></a> on <%= @post.updated_at.strftime("%B %d, %Y %H:%M") %></span>
        </div>
      </div>
    </div>
  </div>
</header>


<article>
  <div class="container">
    <div class="row">
      <%= raw( @post.post )%>
    </div>
  </div>
</article>

<hr>